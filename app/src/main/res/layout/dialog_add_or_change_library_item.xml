<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/libraryItemDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/addLibraryItemDialogTitle"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="28sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/addLibraryItemDialogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:ems="12"
        android:hint="@string/addLibraryItemDialogNameHint"
        android:inputType="textPersonName"
        android:maxLength="30" />

    <RadioGroup
        android:id="@+id/addLibraryItemDialogColorRow1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/addLibraryItemDialogColorRow2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor7"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor9"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addLibraryItemDialogColor10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>

</LinearLayout>
