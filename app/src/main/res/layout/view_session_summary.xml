<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_horizontal|top|fill_vertical"
    android:orientation="vertical"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/summaryDayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/summaryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textStyle="normal"
            tools:text="19.10.2021" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/summaryDayDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="1h 20min" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="fill_horizontal|top|fill_vertical"
            android:orientation="vertical"
            android:stretchColumns="*">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/summaryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        tools:text="Started at 13:13" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="1" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="36dp">

                <TextView
                    android:id="@+id/practiceDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    tools:text="00:00:00"
                    android:textAlignment="textStart"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>


                <TextView
                    android:id="@+id/breakDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    tools:text="00:00:00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp">

                <!--Space to align exactly with the beginning of the text defined in view_session_summary_section.xml-->
<!--                <Space-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="0dp" />-->

                <TextView
                    android:id="@+id/practiceTimeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/sessionSummaryPracticeTime"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/breakTimeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/sessionSummaryBreakTime"
                    android:textSize="15sp" />


            </LinearLayout>

<!--            <View-->
<!--                android:id="@+id/divider"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:layout_marginStart="29dp"-->
<!--                android:layout_marginEnd="29dp"-->
<!--                android:background="?android:attr/listDivider" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sectionList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="13dp"
                    android:layout_weight="1"
                    android:nestedScrollingEnabled="false" />


                <View
                    android:id="@+id/commentDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/commentLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:text="@string/sessionSummaryComment"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/commentField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textStyle="italic"
                    android:text="@tools:sample/lorem/random"
                    android:layout_weight="1"
                    android:gravity="start|top"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>