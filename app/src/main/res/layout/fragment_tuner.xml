<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tuner.TunerFragment">


    <TextView
        android:id="@+id/fragment_tuner_tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnBackground"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tuner_tv_hz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A" />

    <TextView
        android:id="@+id/fragment_tuner_tv_hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurfaceLowerContrast"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tuner_needle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tuner_tv_note"
        tools:text="Hz" />

    <View
        android:layout_width="7dp"
        android:layout_height="60dp"
        android:background="?attr/colorError"
        android:transformPivotX="2dp"
        android:transformPivotY="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toTopOf="@id/fragment_tuner_needle" />

    <View
        android:id="@+id/fragment_tuner_needle"
        android:layout_width="3dp"
        android:layout_height="400dp"
        android:background="?attr/colorOnSurface"
        android:transformPivotX="2dp"
        android:transformPivotY="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tuner_tv_hz" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/tuner_needle_base_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_tuner_needle"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>