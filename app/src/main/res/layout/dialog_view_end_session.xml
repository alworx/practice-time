<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary" >

        <ImageButton
            android:id="@+id/btn_back_alertdialog"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="?homeAsUpIndicator"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/endSessionDialogTitle"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="28sp" />

    </LinearLayout>

    <RatingBar
        android:id="@+id/dialogRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1"
        android:rating="3"/>

    <EditText
        android:id="@+id/dialogComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/endSessionDialogCommentField" />
</LinearLayout>