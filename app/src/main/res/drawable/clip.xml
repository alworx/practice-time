<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:shape="rectangle">
    <gradient
        android:centerX="0.0">
        <aapt:attr name="android:startColor">
            <selector>
                <item android:color="?attr/colorSurface"
                    android:alpha="0.0"/>
            </selector>
        </aapt:attr>
        <aapt:attr name="android:centerColor">
            <selector>
                <item android:color="?attr/colorSurface"
                    android:alpha="0.0"/>
            </selector>
        </aapt:attr>
        <aapt:attr name="android:endColor">
            <selector>
                <item android:color="?attr/colorSurface"
                    android:alpha="1.0"/>
            </selector>
        </aapt:attr>
    </gradient>
</shape>